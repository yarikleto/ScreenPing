{
  "name": "screenping",
  "version": "1.0.0",
  "description": "Watch a screen region, get a Telegram ping when it changes",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.screenping.app",
    "productName": "ScreenPing",
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "src/**/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  }
}
